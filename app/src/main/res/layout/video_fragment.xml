<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/heavy_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="2dp"
            cardview:cardElevation="4dp"
            cardview:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_heavy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        android:src="@drawable/hoka" />

                    <LinearLayout
                        android:id="@+id/linearView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/status_bar_background"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layoutButtons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <Button
                                style="@style/Button"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:text="@string/go_to" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frameLayout"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="48dp"
                    android:text="@string/desc_heavy"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp"
                    android:text="@string/italic_heavy"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/BoombeachWiki_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="2dp"
            cardview:cardElevation="4dp"
            cardview:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout_BoombeachWiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_BoombeachWiki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_roka" />

                    <LinearLayout
                        android:id="@+id/linearView_BoombeachWiki"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/status_bar_background"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layoutButtons_BoombeachWiki"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <Button
                                style="@style/Button"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:text="@string/go_to" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView_BoombeachWiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frameLayout_BoombeachWiki"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="48dp"
                    android:text="@string/desc_BoombeachWiki"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_BoombeachWiki"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp"
                    android:text="@string/italic_BoombeachWiki"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/StrategyBlog_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="2dp"
            cardview:cardElevation="4dp"
            cardview:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frameLayout_StrategyBlog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_StrategyBlog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY"
                        android:src="@drawable/alltrops" />

                    <LinearLayout
                        android:id="@+id/linearView_StrategyBlog"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/status_bar_background"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layoutButtons_StrategyBlog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <Button
                                style="@style/Button"
                                android:layout_marginBottom="@dimen/activity_vertical_margin"
                                android:text="@string/go_to" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <TextView
                    android:id="@+id/textView_StrategyBlog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frameLayout_StrategyBlog"
                    android:fontFamily="sans-serif-light"
                    android:lineSpacingExtra="4dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="48dp"
                    android:text="@string/desc_StrategyBlog"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_StrategyBlog"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="24dp"
                    android:text="@string/italic_StrategyBlog"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
